{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./server",
    "resolveJsonModule": true,
    "paths": {
      "constants/*": ["./server/constants/*"],
      "models/*": ["./server/models/*"],
      "config/*": ["./server/config/*"],
      "modules/*": ["./server/modules/*"],
      "helpers/*": ["./server/helpers/*"],
      "locales/*": ["./server/locales/*"],
      "@": ["."],
    }
  },
  "include": [
    "server/**/*"
  ]
}